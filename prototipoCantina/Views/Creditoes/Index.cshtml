@model IEnumerable<prototipoCantina.Models.Credito>

@{
    ViewData["Title"] = "Historial de Créditos";
}

<div class="container mt-4">
    <h1 class="text-center text-primary mb-4">Historial de Movimientos de Créditos</h1>

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Registrar Nuevo Crédito
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().CreditoDiario)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().CreditoConsumido)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Fecha)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().IdUsuarioNavigation)</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted">
                            No hay registros de créditos disponibles.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.CreditoDiario)</td>
                            <td>@Html.DisplayFor(modelItem => item.CreditoConsumido)</td>
                            <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                            <td>@Html.DisplayFor(modelItem => item.IdUsuarioNavigation.Nombre)</td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.IdCredito" class="btn btn-warning btn-sm">
                                    <i class="bi bi-eye"></i> Detalles
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.IdCredito" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Borrar
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
