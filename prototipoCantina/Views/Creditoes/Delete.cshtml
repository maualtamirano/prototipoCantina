@model prototipoCantina.Models.Credito

@{
    ViewData["Title"] = "Eliminar Crédito";
}

<div class="container mt-4">
    <h1 class="text-center text-danger mb-4">Eliminar Crédito</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Confirmar Eliminación</h4>
        </div>
        <div class="card-body">
            <h3 class="text-center">¿Estás seguro de que deseas eliminar este crédito?</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CreditoDiario)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CreditoDiario)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CreditoConsumido)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CreditoConsumido)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Fecha)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Fecha)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdUsuarioNavigation)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdUsuarioNavigation.Nombre)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="IdCredito" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver a la Lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
