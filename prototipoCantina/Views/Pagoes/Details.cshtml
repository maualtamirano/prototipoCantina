@model prototipoCantina.Models.Pago

@{
    ViewData["Title"] = "Detalles del Pago";
}

<div class="container mt-4">
    <h1 class="text-center text-primary mb-4">Detalles del Pago</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">Pago ID: @Model?.IdPago</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Monto</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Monto)</dd>

                <dt class="col-sm-4">Fecha del Pago</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaPago)</dd>

                <dt class="col-sm-4">Usuario</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.IdUsuarioNavigation.Nombre)</dd>
            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.IdPago" class="btn btn-warning">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i> Volver al Listado
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
