@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center mt-5">
    <h1 class="display-4 mb-4 text-primary">Bienvenido al Sistema de Cantina</h1>
    <p class="lead mb-4 text-muted">Seleccione una opción para gestionar los datos:</p>

    <div class="d-flex flex-wrap justify-content-center gap-4">
        <a href="/Usuarios" class="btn btn-lg btn-outline-primary shadow-sm hover-shadow-lg px-4 py-3 rounded-pill transition-all duration-300">
            <i class="fas fa-users me-2"></i> Gestión de Usuarios
        </a>
        <a href="/Menus" class="btn btn-lg btn-outline-success shadow-sm hover-shadow-lg px-4 py-3 rounded-pill transition-all duration-300">
            <i class="fas fa-utensils me-2"></i> Gestión de Menús
        </a>
        <a href="/Reservas" class="btn btn-lg btn-outline-warning shadow-sm hover-shadow-lg px-4 py-3 rounded-pill transition-all duration-300">
            <i class="fas fa-calendar-check me-2"></i> Gestión de Reservas
        </a>
        <a href="/Pagoes" class="btn btn-lg btn-outline-info shadow-sm hover-shadow-lg px-4 py-3 rounded-pill transition-all duration-300">
            <i class="fas fa-credit-card me-2"></i> Gestión de Pagos
        </a>
        <a href="/Creditoes" class="btn btn-lg btn-outline-danger shadow-sm hover-shadow-lg px-4 py-3 rounded-pill transition-all duration-300">
            <i class="fas fa-wallet me-2"></i> Gestión de Créditos
        </a>
    </div>
</div>



<!-- Incluye FontAwesome para los íconos -->
@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
}
